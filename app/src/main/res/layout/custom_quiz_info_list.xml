<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tarih_txt_cql"
                android:layout_width="140dp"
                android:layout_marginStart="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Quiz Date"
                android:textAlignment="center"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/quizNumber_txt_cql"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginStart="2dp"
                android:text="Quiz Number"
                android:textAlignment="center"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/soruCount_txt_cql"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginStart="2dp"
                android:text="Total Questions"
                android:textAlignment="center"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/score_txt_cql"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginStart="2dp"
                android:text="Score"
                android:textAlignment="center"
                android:gravity="center|top|bottom|left|right">
            </TextView>
            <TextView
                android:id="@+id/id_txt_cql"
                android:layout_width="35dp"
                android:layout_marginStart="0dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="id"
                android:visibility="invisible"
                android:textAlignment="center"
                android:gravity="center">
            </TextView>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>


