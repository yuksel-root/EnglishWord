<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#491349"
    android:padding="16dp">

    <TextView
        android:id="@+id/quiz_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:padding="5dp"
        android:text="QUİZ TİME"
        android:textColor="#00bfff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/quiz_start_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/start_quiz" />

    <TextView
        android:id="@+id/quiz_higscore_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:padding="5dp"
        android:text="HighScore: 0"
        android:textColor="#FF0000"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/quiz_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:padding="5dp"
        android:text="START QUİZ"
        android:textColor="#000"
        android:textSize="35sp" />

</RelativeLayout>

