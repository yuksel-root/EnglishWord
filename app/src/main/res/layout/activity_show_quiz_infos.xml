<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ShowQuizInfos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sinavDateText"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:background="#ffa500"
            android:textColor="#000"
            android:gravity="center|top|bottom|right|left"
            android:text="Quiz Date: " />
        <TextView
            android:id="@+id/sinavNumberText"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:background="#00bfff"
            android:textAlignment="center"
            android:gravity="center|top|bottom|right|left"
            android:text="Quiz Number : " />
    </LinearLayout>


    <ImageView
        android:id="@+id/soruImage"
        android:src="@drawable/quiz_image"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/soruCount"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="#ffff00"
        android:textColor="#000"
        android:gravity="center|top|bottom|right|left"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Question Count: " />

    <TextView
        android:id="@+id/trueCount"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:background="#00ff00"
        android:gravity="center|top|bottom|right|left"
        android:text="True Count: " />
    <TextView
        android:id="@+id/falseCount"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAlignment="center"
        android:background="#ff0000"
        android:gravity="center|top|bottom|right|left"
        android:text="False Count: " />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:background="#9400d3"
        android:gravity="center|top|bottom|right|left"
        android:text="Score: " />



</LinearLayout>